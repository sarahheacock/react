{
  "verbose": false,
  "delay": "1000",
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "build/server/index.js",
    "build/client/index.css",
    "build/client/shared.css",
    "build/client/index.js"
  ],
  "events": {
    "restart": "osascript -e 'display notification \"app restarted\" with title \"nodemon\"'"
  },
  "ignore": [
    "src"
  ]
}
